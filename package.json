{
  "name": "bmt-token",
  "version": "0.1.0",
  "description": "BrickMark BMT Token",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "truffle test",
    "build": "truffle compile",
    "flat": "truffle-flattener ./contracts/BMTToken.sol > ./BMTFlat.sol",
    "flat2": "truffle-flattener ./contracts/BVTVotingToken.sol > ./BVTFlat.sol",
    "lint": "solhint \"contracts/*.sol\"",
    "lint2": "prettier --list-different **/*.sol",
    "prettier": "prettier --write **/*.sol",
    "coverage": "solidity-coverage",
    "ganache": "ganache-cli -m \"dial bulk garage popular robot horse hand click enhance clown clay despair\"",
    "ganache3s": "ganache-cli -b 3 -m \"dial bulk garage popular robot horse hand click enhance clown clay despair\"",
    "security": "truffle run verify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://digitalizeit@bitbucket.org/digitalizeit/bmt-token.git"
  },
  "author": "TBD",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://bitbucket.org/digitalizeit/bmt-token#readme",
  "devDependencies": {
    "ethereumjs-abi": "^0.6.8",
    "ganache-cli": "^6.7.0",
    "ganache-time-traveler": "^1.0.5",
    "prettier": "^1.19.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.34",
    "solhint": "^2.3.0",
    "solhint-plugin-prettier": "0.0.3",
    "solidity-coverage": "^0.6.7",
    "truffle-assertions": "^0.9.2",
    "truffle-flattener": "^1.4.2",
    "truffle-security": "^1.6.1"
  },
  "dependencies": {
    "openzeppelin-solidity": "^2.4.0",
    "truffle-hdwallet-provider": "^1.0.17"
  }
}
